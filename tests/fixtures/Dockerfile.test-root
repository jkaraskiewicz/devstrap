# Test Dockerfile with root user
# For testing sudo apt installations

FROM ubuntu:22.04

# Install dependencies as root
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    pkg-config \
    libssl-dev \
    sudo \
    zsh \
    && rm -rf /var/lib/apt/lists/*

# Install Rust as root
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set working directory
WORKDIR /root/devstrap

# Copy the devstrap project
COPY . /root/devstrap

# Build devstrap
RUN cargo build --release

# Test config is already copied from tests/fixtures/test-config.toml
# No need to create it - it's in the project files

CMD ["/bin/bash"]
