# Multi-stage Dockerfile for testing tutorial CUJs
# Based on Ubuntu 22.04 for clean, reproducible environment

FROM rust:1.82 as builder

WORKDIR /build
COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY tests ./tests
RUN cargo build --release

FROM ubuntu:22.04

# Install base dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    ca-certificates \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create test user with sudo privileges
RUN useradd -m -s /bin/bash tester && \
    echo "tester ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER tester
WORKDIR /home/tester

# Copy devstrap binary
COPY --from=builder --chown=tester:tester /build/target/release/devstrap /usr/local/bin/devstrap

# Set up directories
RUN mkdir -p /home/tester/.config/devstrap \
    && mkdir -p /home/tester/.local/bin \
    && mkdir -p /home/tester/tutorial-tests

ENV RUST_LOG=info
ENV PATH="/home/tester/.local/bin:${PATH}"

# Default command
CMD ["/bin/bash"]
